#!/bin/sh

cd ${HOME}/.system/ && git submodule update --init --recursive

if [ ! -f ~/.vimrc ]; then
    ln -s ${HOME}/.system/vimrc ${HOME}/.vimrc
fi

if [ ! -f ~/.tmux.conf ]; then
    ln -s ${HOME}/.system/tmux.conf ${HOME}/.tmux.conf
fi

if [ ! -f ~/.zshrc ]; then
    ln -s ${HOME}/.system/zshrc ${HOME}/.zshrc
fi

if [ ! -d ${HOME}/.system/vim/pack/plugins/start/coc.nvim ]; then
    cd ${HOME}/.system/vim/pack/plugins/start/coc.nvim && yarn install
fi

vim -c "CocInstall coc-rls"
